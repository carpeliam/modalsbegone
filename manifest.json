{
	"name": "Modals B. Gone",
	"version": "0.1.0",
	"description": "Remove pesky modals that block your screen from webpages you visit",
	"manifest_version": 2,
	"background": {
		"scripts": [
			"backgroundModalKiller.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Be Gone, Ye Modals!"
	},
	"permissions": [
		"activeTab"
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}